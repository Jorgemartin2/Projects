@page
@model App.Pages.Tasks.EditModel

@{
    ViewData["Title"] = "Editar";
}

<div>
    <h1>Editar Tarefa</h1>
</div>

<h4>Tarefa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TasksModel.Id" />
            <div class="form-group">
                <label asp-for="TasksModel.Description" class="control-label"></label>
                <input asp-for="TasksModel.Description" class="form-control" />
                <span asp-validation-for="TasksModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-ckeck">
                <input class="form-check-input" asp-for="TasksModel.Done"/>
                <label class="form-check-label" asp-for="TasksModel.Done"></label>
                <span asp-validation-for="TasksModel.Done"></span>
            </div>
            <div class="form-group">
                <label asp-for="TasksModel.EndDate" class="control-label"></label>
                <input asp-for="TasksModel.EndDate" class="form-control" />
                <span asp-validation-for="TasksModel.EndDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-page="./Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
