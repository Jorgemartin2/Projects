@page
@model App.Pages.Tasks.CreateModel

@{
    ViewData["Title"] = "Adicionar";
}

<div class="text-center">
    <h1>Adicionar nova tarefa</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TasksModel.Description" class="control-label"></label>
                <input asp-for="TasksModel.Description" class="form-control" />
                <span asp-validation-for="TasksModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TasksModel.EndDate" class="control-label"></label>
                <input asp-for="TasksModel.EndDate" class="form-control" />
                <span asp-validation-for="TasksModel.EndDate" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" /> |
                <a class="btn btn-secondary" asp-page="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
